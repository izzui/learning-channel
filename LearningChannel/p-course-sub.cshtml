<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//PT-BR" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="pt-br" ng-app>
<head>
	<meta charset="iso-8859-1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">

	<title>Demo - Learning Channels</title>
	
	<!-- icons -->
	<link rel="stylesheet" type="text/css" href="css/font-awesome.css">
		
	<!-- bootstrap core CSS -->	
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	
	<!-- demo-izzui -->
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Share:400,400italic,700,700italic"><!-- outros textos -->
	<link rel="stylesheet" type="text/css" href="css/demo-izzui.css">

	<!-- client's theme -->
	<link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Enriqueta:400,700&subset=latin,latin-ext'> <!-- tipografia para a marca e títulos -->
	<link rel="stylesheet" type="text/css" href="css/vivo-theme.css">
</head>

<body class="light-gray-bg">
	@RenderPage("inc/fb-basic.cshtml")
	@RenderPage("inc/header.cshtml")

	<div class="content container aired-v">
		<!-- Main Content Col -->
		<div id="content-main" class="col-xs-12 col-sm-9 col-md-10">
			<!-- <div class="fb-like pull-right clearfix" data-href="https://apps.facebook.com/izzuichannel/" data-width="450" data-layout="button_count" data-show-faces="false" data-send="false"></div> -->
			<div id="course-box" class="box box-white clearfix">
				<div class="pull-left">
					<img class="thumb" src="img/thumb-ID00001.jpg" alt="course thumb" />
				</div>
				<div class="col-xs-12 col-sm-9 col-md-10 clearfix">
					<h1 class="title">Guerreiros em Ação: Dia 1</h1>
					<div class="progress progress-striped active">
						<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
							<span class="sr-only">40% Complete</span>
						</div>
					</div><!-- /progress -->
					<p class="progress-label em7"><strong>4</strong> dos <strong>10</strong> vídeos foram marcados como assistidos.</p>
					<p class="em7">Sua avaliação do curso: <strong>3 estrelas</strong>. <a data-toggle="modal" href="#change-rating">atualizar avaliação</a></p>
				</div><!-- /col-sm-8 -->
			</div><!-- /box -->

			<h3>Lessons</h3>
			<div id="lessons" ng-controller="LessonsCtrl">
				<div class="list-group" ng-repeat="unit in units">
					<h4 class="list-group-item active title">{{unit.unitTitle}}</h4>
					<a class="list-group-item clearfix" ng-repeat="lesson in unit.lessons" href="{{lesson.videoURL}}">
						<div class="pull-left right-far">
							<img src="http://placehold.it/74x42" alt="lesson thumb" />
							<div class="progress progress-striped active">
								<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{lesson.progress}}" aria-valuemin="0" aria-valuemax="100" style="width:{{lesson.progress}}%">
									<span class="sr-only">{{lesson.progress}}% Complete</span>
								</div>
							</div><!-- /progress -->
						</div>
						<p class="pull-left">{{lesson.title}}<br /><span class="text-muted"><em><small>{{lesson.videoLength}}</small></em></span></p>
					</a>
				</div><!-- /list-group -->
			</div><!-- /lessons-->

		</div><!-- /content-main-->

		<!-- Side Content -->
		<div id="col" class="col-xs-12 col-sm-3 col-md-2 box box-white box-noborder has-tooltip">
			<div id="btn-icons-tt-container" class="btn-group btn-group-justified">
				<a class="btn btn-icon-default btn-half-width btn-ret aired" href="#">
					<i class="icon-info-sign icon-3x smooth006" data-toggle="tooltip" title="Informações do curso"></i>
					<!-- <span class="btn-half-width-label em7">info</span> -->
				</a>

				<a class="btn btn-icon-default btn-half-width btn-ret aired" href="#">
					<i class="icon-group icon-3x smooth006" data-toggle="tooltip" title="Alunos inscritos"></i>
					<!-- <span class="btn-half-width-label em7">alunos</span> -->
				</a>
			</div>
			<div class="btn-group btn-group-justified">
				<a class="btn btn-icon-default btn-half-width btn-ret aired" href="#">
					<i class="icon-share-alt icon-3x smooth006" data-toggle="tooltip" data-placement="bottom" title="Compartilhar curso"></i>
					<!-- <span class="btn-half-width-label em7">compartilhar</span> -->
				</a>

				<a class="btn btn-icon-default btn-half-width btn-ret aired" href="#">
					<i class="icon-comment-alt icon-3x smooth006" data-toggle="tooltip" data-placement="bottom" title="Convidar amigos"></i>
					<!-- <span class="btn-half-width-label em7">convidar</span> -->
				</a>
			</div>

			<h4 class="title title-padding top-near bg-purple em1-2">Groups</h4>
			<ul class="list-unstyled list-inline groups-list em9">
				<li class="groups-item">
					<a class="groups-link" href="#">Clientes - Rio de Janeiro</a><br />
					<span class="groups-info">93456 members</span>
				</li>
				<li class="groups-item">
					<a class="groups-link" href="#">Clientes - São Paulo</a><br />
					<span class="groups-info">93566 members</span>
				</li>
				<li class="groups-item">
					<a class="groups-link" href="#">Clientes - Bahia</a><br />
					<span class="groups-info">93 members</span>
				</li>
			</ul>
			<button class="btn btn-xxs em7 btn-default btn-block">Crie um grupo!</button>

			<h4 class="title title-padding top-far bg-purple em1-2">Amigos inscritos</h4>

			<ul class="list-unstyled list-inline friends-list has-tooltip" ng-controller="FriendsCtrl">
				<li class="friends-item" ng-repeat="friend in friends">
					<a href="#" data-toggle="tooltip" data-placement="bottom" title="{{friend.name}}"><img src="img/{{friend.picture}}" alt="amigo inscrito" /></a>
				</li>			
			</ul>
			<button class="btn btn-xxs em7 btn-default btn-block">Convite mais amigos!</button>

			<h4 class="title title-padding top-far bg-purple em1-2">Autor</h4>
			<img src="img/pic-author-ID00001.jpg" alt="autor" />
			<h5>Rodielson Sousa de Souza</h5>
			<ul class="list-unstyled list-inline has-tooltip">
				<li><a class="btn btn-icon-default" href="#" data-toggle="tooltip" data-placement="bottom" title="informações"><i class="icon-info-sign icon-large"></i></a></li>
				<li><a class="btn btn-icon-default" href="#" data-toggle="tooltip" data-placement="bottom" title="perfil no facebook"><i class="icon-facebook icon-large"></i></a></li>
				<li><a class="btn btn-icon-default" href="#" data-toggle="tooltip" data-placement="bottom" title="perfil no twitter"><i class="icon-twitter icon-large"></i></a></li>
				<li><a class="btn btn-icon-default" href="#" data-toggle="tooltip" data-placement="bottom" title="perfil no linkedin"><i class="icon-linkedin icon-large"></i></a></li>
			</ul>

		</div><!-- /side-content -->

	</div><!-- /container -->

	@RenderPage("inc/footer.cshtml")

	<!-- modal-rating -->
	<div id="change-rating" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Atualiza avaliação" aria-hidden="true"
							aria-describedby="Esta é uma janela onde você poderá alterar a avaliação dada ao curso.">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title">Atualizar avaliação</h4>
				</div>
				<div class="modal-body">
					<p>Você deseja mudar a sua avaliação sobre o curso? Sem problemas!</p>
					<div class="rating text-center">
						<div class="star" data-score="1"></div>
						<p id="rating-hint" class="rating-hint em7"></p>
					</div>
				</div>
				<div class="modal-footer">
					<button id="btn-confirm-rating"type="button" class="btn btn-primary btn-sm btn-block" disabled="disabled" data-dismiss="modal">Save changes</button>
				</div>
			</div><!-- /modal-content -->
		</div><!-- /modal-dialog -->
	</div><!-- /modal-rating -->

	<script type="text/javascript" src="//code.jquery.com/jquery-1.10.1.min.js"></script>
	<script type="text/javascript" src="js/bootstrap.js"></script>
	<script type="text/javascript" src="js/enquire.js"></script>
	<script type="text/javascript" src="js/angular.min.js"></script>
	<script type="text/javascript" src="js/jquery.raty.min.js"></script>

	<!-- Angular Controllers -->
	<script type="text/javascript" src="js/ang-LessonsCtrl.js"></script>
	<script type="text/javascript" src="js/ang-FriendsCtrl.js"></script>

	<script>
		///Bootstrap///
		//used for "Topics" bt
		$('#btn-topics').popover();

		$('.has-tooltip').tooltip({
			selector: "[data-toggle=tooltip]",
			container: "body"
		})
		
		//used for "Leaderboards" tabs
		$('#tab-leaderboard a:first').tab('show');
		
		///Raty///
		//Fake Ratings
		$('.star').raty({
			cancel: false,
			click: function () {
				enableBtn('#btn-confirm-rating');
			},
			hints: ['péssimo', 'fraco', 'regular', 'bom', 'ótimo'],
			path: 'img/',
			score: 3,
			size: 35,
			space: false,
			starHalf: 'star-half-biggest.png',
			starOff: 'star-off-biggest.png',
			starOn: 'star-on-biggest.png',
			target: '#rating-hint',
			targetKeep: true,
			targetText: " ",
			width: false
		});

		var enableBtn = function (target) {
			$(target).removeAttr('disabled');
		}

		///Enquire///

		//tablets(landscape), facebook frame in 1024x768px
		enquire.register("all and (max-width: 1024px)", {
			match: function () {
				$('body').addClass('sm');
			},
			unmatch: function () {
				$('body').removeClass('sm');
			}
		});

		//medium devices
		enquire.register("all and (min-width: 1025px)", {
			match: function () {
				$('body').removeClass('sm');
				$('body').addClass('md');
			},
			unmatch: function () {
				$('body').removeClass('md');
			}
		});

		//medium and larger
		enquire.register("all and (min-width: 768px)", {
			match: function () {
				$('#col-navbar-form').addClass('col-sm-push-2');
				$('#col-btn-topics').addClass('col-sm-pull-5');
			},
			unmatch: function () {
				$('#col-navbar-form').removeClass('col-sm-push-2');
				$('#col-btn-topics').removeClass('col-sm-pull-5');
			}
		});
	</script>

</body>
</html>
